{
    "blogpost": {
        "properties": {
            "comments": {
                "type": "nested",
                "include_in_parent": true,
                "properties": {
                    "name": { "type": "string", "index" : "analyzed" },
                    "comment": { "type": "string", "index" : "analyzed" },
                    "age": { "type": "short" },
                    "stars": { "type": "short" },
                    "date": { "type": "date" }
                }
            },
            "title": { "type": "string", "index" : "analyzed" },
            "body": { "type": "string", "index" : "analyzed" },
            "tags": { "type": "string" }
        }
    }
}
